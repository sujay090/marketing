PORT=5000
NODE_ENV=development
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
JWT_SECRET=your_super_secret_key_here

# Client Configuration
CLIENT_URL=http://localhost:5173

# WhatsApp API Configuration
WHATSAPP_API_TOKEN=your_whatsapp_api_token
MSGWAPI_TOKEN=your_whatsapp_api_token

# Server URLs
BASE_URL=https://yourdomain.com
SERVER_URL=http://localhost:5000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=your-s3-bucket-name

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_URL=https://your-distribution.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_ENABLED=true

# Storage Configuration
STORAGE_TYPE=s3
# STORAGE_TYPE=local (use this for local development)

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key

# Optional: Google Cloud Vertex AI Configuration
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GOOGLE_CLOUD_LOCATION=us-central1

# Email Configuration (if needed later)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password